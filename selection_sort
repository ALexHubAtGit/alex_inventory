SelectionSort(A)
    for i = 0 to length(A) - 2 do
        minIndex = i
        for j = i + 1 to length(A) - 1 do
            if A[j] < A[minIndex] then
                minIndex = j
            end if
        end for
        if minIndex != i then
            swap A[i] with A[minIndex]
        end if
    end for
end SelectionSort
